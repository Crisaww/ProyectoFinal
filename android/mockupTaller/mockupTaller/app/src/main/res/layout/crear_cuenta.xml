<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".crear_cuenta">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/onda"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_overlay"
            android:alpha="0.9"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="70dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#ffffff">
                    <TextView
                        android:id="@+id/textCrear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fuente_poppins_medium"
                        android:text="Crear tu cuenta"
                        android:textColor="@color/black"
                        android:textSize="34sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:id="@+id/textNombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/dmsans_regular"
                        android:text="Nombre de usuario:"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                    <EditText
                        android:id="@+id/txtNombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/estilo_borde_text"
                        android:backgroundTint="#E4E4E4"
                        android:inputType="text"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/txtCorreo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/dmsans_regular"
                        android:text="Correo electrónico:"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                    <EditText
                        android:id="@+id/editTextTextCorreo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/estilo_borde_text"
                        android:backgroundTint="#E4E4E4"
                        android:inputType="textEmailAddress"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/txtPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/dmsans_regular"
                        android:text="Contraseña:"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/editTextTextPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/estilo_borde_text"
                            android:backgroundTint="#E4E4E4"
                            android:inputType="textPassword"
                            android:textColor="#000000"
                            android:textColorHint="#000000"
                            android:textSize="14sp" />
                        <ImageView
                            android:id="@+id/eyeTogglePassword"
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:clickable="true"
                            android:contentDescription="Mostrar/Ocultar contraseña"
                            android:src="@drawable/ojo_svgrepo_com" />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/txtConfirmPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/dmsans_regular"
                        android:text="Confirmar contraseña:"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/editTextTextConfirmPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/estilo_borde_text"
                            android:backgroundTint="#E4E4E4"
                            android:inputType="textPassword"
                            android:textColor="#000000"
                            android:textColorHint="#000000"
                            android:textSize="14sp"/>
                        <ImageView
                            android:id="@+id/eyeToggleConfirmPassword"
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:clickable="true"
                            android:contentDescription="Mostrar/Ocultar contraseña"
                            android:src="@drawable/ojo_svgrepo_com" />
                    </RelativeLayout>
                    <Button
                        android:id="@+id/btnRegistrarse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="#563AFA"
                        android:onClick="registrarse"
                        android:text="Crear Cuenta"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp">
                        <TextView
                            android:id="@+id/txtCuenta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dmsans_regular"
                            android:text="¿Ya tienes una cuenta?"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/txtIniciasesion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dmsans_regular"
                            android:onClick="iniciarSesion"
                            android:text="Inicia sesión"
                            android:textColor="#23527c"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </FrameLayout>
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            app:srcCompat="@drawable/logotrans" />
    </FrameLayout>
</LinearLayout>
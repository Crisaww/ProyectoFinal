<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".configuracion_mi_cuenta">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@drawable/gradient_overlay"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
        <ImageView
            android:id="@+id/btnVolver"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/flecha_volver" />
        <TextView
            android:id="@+id/text_configuracion_mi_cuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/fuente_poppins_medium"
            android:text="Configuración - Mi cuenta"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center"/>
        </LinearLayout>
    </FrameLayout>
        <TextView
            android:id="@+id/textUser_actual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/dmsans_regular"
            android:text="Nombre de usuario actual:"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginTop="55dp"/>

        <EditText
            android:id="@+id/txtUser_actual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/estilo_borde_text"
            android:backgroundTint="#E4E4E4"
            android:ems="10"
            android:fontFamily="@font/poppins_light"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="14sp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textUser_nuevo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/dmsans_regular"
            android:text="Nombre de usuario nuevo:"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/txtUser_nuevo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/estilo_borde_text"
            android:backgroundTint="#E4E4E4"
            android:fontFamily="@font/poppins_light"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="14sp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnGuardar_cambios_usuario_actual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#563AFA"
            android:onClick="iniciarSesion"
            android:text="Guardar cambios"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

        <View
            android:id="@+id/linea_usuario_actual"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#444444"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/textCorreo_actual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/dmsans_regular"
            android:text="Correo electrónico actual:"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/txtCorreo_actual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/estilo_borde_text"
            android:backgroundTint="#E4E4E4"
            android:ems="10"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/poppins_light"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="14sp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textCorreo_nuevo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/dmsans_regular"
            android:text="Correo electrónico nuevo:"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/txtCorreo_nuevo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/estilo_borde_text"
            android:backgroundTint="#E4E4E4"
            android:ems="10"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/poppins_light"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="14sp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnGuardar_cambios_correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#563AFA"
            android:onClick="iniciarSesion"
            android:text="Guardar cambios"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/btnEliminar_cuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#970202"
            android:text="Eliminar cuenta"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>
</LinearLayout>
    </ScrollView>
</LinearLayout>
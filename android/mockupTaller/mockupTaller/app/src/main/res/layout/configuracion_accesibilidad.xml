<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".configuracion_accesibilidad">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:orientation="horizontal"
        android:background="@drawable/gradient_overlay">
        <ImageView
            android:id="@+id/btnVolver"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/flecha_volver"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"/>
        <TextView
            android:id="@+id/text_configuracion_accesibilidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/fuente_poppins_medium"
            android:text="Configuración - Accesibilidad"
            android:textColor="@color/white"
            android:textSize="19sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/textTema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/fuente_poppins_medium"
        android:text="Tema"
        android:textSize="20sp"
        android:textStyle="bold" />
    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modo oscuro"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp" />
    <View
        android:id="@+id/linea_salida_de_voz"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="50dp"
        android:background="#444444" />
    <TextView
        android:id="@+id/textSalida_de_voz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/fuente_poppins_medium"
        android:text="Salida de voz"
        android:textSize="20sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_margin="10dp">

        <CheckBox
            android:id="@+id/checkboxFemenina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableStart="@drawable/vector_mujer"
            android:hapticFeedbackEnabled="true"
            android:text="Voz femenina"
            android:textColor="#4C065F"
            android:theme="@style/CustomCheckbox01"
            android:textStyle="bold"
            app:useMaterialThemeColors="true" />
        <View
            android:layout_width="32dp"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/checkboxMasculino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableStart="@drawable/vector_hombre"
            android:hapticFeedbackEnabled="true"
            android:text="Voz masculina"
            android:textColor="#4C065F"
            android:theme="@style/CustomCheckbox01"
            android:textStyle="bold"
            app:useMaterialThemeColors="true"/>
    </LinearLayout>
    <View
        android:id="@+id/lineaTamaño_de_texto"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="50dp"
        android:background="#444444" />
    <TextView
        android:id="@+id/textTamaño_de_texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/fuente_poppins_medium"
        android:text="Tamaño de texto"
        android:textSize="20sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_gravity="center">
        <Button
            android:id="@+id/btnPequeña"
            android:layout_width="129dp"
            android:layout_height="40dp"
            android:text="Pequeña aA"
            android:textSize="15sp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#E4E4E4"/>
        <Button
            android:id="@+id/btnGrande"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grande aA"
            android:textSize="23sp"
            android:backgroundTint="#E4E4E4"/>
    </LinearLayout>
</LinearLayout>
    </ScrollView>
</LinearLayout>
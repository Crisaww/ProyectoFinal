<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="palabras_comunes">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/gradient_overlay"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/btnVolver"
                android:layout_weight="1"
                android:layout_width="12dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/flecha_volver" />
            <TextView
                android:id="@+id/frases_y_palabras"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="13"
                android:fontFamily="@font/fuente_poppins_medium"
                android:gravity="center"
                android:text="Palabras comunes"
                android:textColor="@color/white"
                android:textSize="23sp" />
        </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:columnCount="2"
        android:rowCount="2"
        android:padding="16dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSalud"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/card_background"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">
                <ImageView
                    android:id="@+id/iconoMensaje"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/mensaje" />
                <TextView
                    android:id="@+id/textoSaludo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Saludos/Despedidas"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center" />
                <Button
                    android:id="@+id/botonIngresarSaludo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#BFB6FF"
                    android:onClick="saludos"
                    android:text="Ingresar"
                    android:textColor="#303041"
                    android:textStyle="bold"
                    app:cornerRadius="7dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardEmociones"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/card_background"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">
                <ImageView
                    android:id="@+id/iconoCorazon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/corazon" />
                <TextView
                    android:id="@+id/textoEmociones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Emociones"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/botonIngresarEmociones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#BFB6FF"
                    android:onClick="emociones"
                    android:text="Ingresar"
                    android:textColor="#303041"
                    android:textStyle="bold"
                    app:cornerRadius="7dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardAnimales"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/card_background"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">
                <ImageView
                    android:id="@+id/iconoHuella"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/huella" />
                <TextView
                    android:id="@+id/textoAnimales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Animales"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center" />
                <Button
                    android:id="@+id/botonIngresarAnimales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#BFB6FF"
                    android:onClick="animales"
                    android:text="Ingresar"
                    android:textColor="#303041"
                    android:textStyle="bold"
                    app:cornerRadius="7dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPreguntas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/card_background"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">
                <ImageView
                    android:id="@+id/iconoPregunta"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/pregunta" />
                <TextView
                    android:id="@+id/textoPreguntas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Preguntas"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center" />
                <Button
                    android:id="@+id/botonIngresarPreguntas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#BFB6FF"
                    android:onClick="preguntas"
                    android:text="Ingresar"
                    android:textColor="#303041"
                    android:textStyle="bold"
                    app:cornerRadius="7dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>
    </FrameLayout>
    </LinearLayout>
    </ScrollView>
</FrameLayout>
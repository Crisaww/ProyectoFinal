            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/imagencristian2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/rounded_image"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/cristian2" />
            <TextView
                android:id="@+id/textCristian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:text="Cristian Narváez"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textoDesarrolladoraCristian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/dmsans_regular"
                android:gravity="center"
                android:text="Desarrollador de software"
                android:textSize="13sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/githubCristian"
                    android:layout_width="25dp"
                    android:layout_height="22dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/github_color_svgrepo_com" />
                <ImageView
                    android:id="@+id/googleCristian"
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/icons8_gmail_nuevo" />
                <ImageView
                    android:id="@+id/linkedinCristian"
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/linkedin" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/imagenMar2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/rounded_image"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/mar2" />
            <TextView
                android:id="@+id/textMaria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:text="Maria del Mar Artunduaga"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textoDesarrolladoraMaria"

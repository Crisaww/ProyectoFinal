                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/dmsans_regular"
                android:gravity="center"
                android:text="Desarrolladora de software"
                android:textSize="13sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/githubMaria"
                    android:layout_width="25dp"
                    android:layout_height="22dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/github_color_svgrepo_com" />
                <ImageView
                    android:id="@+id/googleMaria"
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/icons8_gmail_nuevo" />
                <ImageView
                    android:id="@+id/linkedinMaria"
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/linkedin" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
